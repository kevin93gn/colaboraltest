<!DOCTYPE html>
<html>
    <head>
      <title>Colaboral</title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->
      <%= csrf_meta_tags %>
      <%= javascript_include_tag 'jquery'  %>
      <%= javascript_include_tag 'chartist.min'  %>

    </head>
  <body style>
  <header>
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
          <%= link_to 'Colaboral', root_path, :id => 'logo', :title => 'Colaboral'  %>
        </div>
        <% if user_signed_in? %>
            <div class="col-md-9 col-sm-9 col-xs-9">
              <ul class="pull-right user_panel">
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Bienvenido, <strong><%= "#{current_user.first_name} #{current_user.last_name}"%></strong> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to destroy_user_session_path, method: :get, :class => 'navbar-link' do %>
                          <i class="icon-logout"></i>Cerrar Sesi&oacute;n
                      <%end%>
                    </li>
                  </ul>
                </li>
              </ul>
             </div>
        <% end %>
      </div>
    </div>
  </header><!-- End header -->
  <% if user_signed_in? %>
    <nav>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div id="mobnav-btn"></div>
              <ul class="sf-menu">
                <% if current_user.user? %>
                    <% courses = Subscription.where(:user_id => current_user.id).any? %>
                    <% coachings = Coachee.where(:user_id => current_user.id).any? %>
                    <% all_subscribed_courses = Course.where(:all_subscribed => true).any? %>
                    <% external_user_courses = Course.where(:external_users_subscribed => true).any? %>
                    <% no_courses = true %>
                    <% if coachings %>
                        <li>
                          <%= link_to coachings_path do %>
                              <i class="icon-person"></i> INICIO
                          <% end %>
                        </li>
                        <% no_courses = false %>
                     <% end %>
                    <% if courses or
                            (all_subscribed_courses and !current_user.external_user?) or
                            (external_user_courses and current_user.external_user?)  %>
                        <li class="normal_drop_down">
                          <a href="#"><i class="icon-book-open"></i>Mis Cursos</a>
                          <div class="mobnav-subarrow"></div>
                          <ul>
                            <li><%= link_to 'Todos',  	all_courses_path %></li>
                            <li><%= link_to 'Activos',  	courses_path%></li>
                            <li><%= link_to 'Finalizados',  	finished_courses_path %></li>
                          </ul>
                        </li>
                        <% no_courses = false %>

                 <% end %>
                    <%if no_courses  %>
                    <li>
                      <%= link_to home_redirect_path do %>
                          <i class="icon-home"></i> Home
                      <% end %>
                    </li>
                    <% end %>
                <% elsif current_user.role == 'administrador' %>
                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-book-open"></i>Mis Cursos</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Todos',  	all_courses_path %></li>
                        <li><%= link_to 'Activos',  	courses_path%></li>
                        <li><%= link_to 'Finalizados',  	finished_courses_path %></li>
                      </ul>
                    </li>
                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-puzzle-1"></i> Adm. Coaching</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Ver Coachings',  	coaching_admin_path %></li>
                        <li><%= link_to 'Crear',  	new_coaching_path%></li>
                      </ul>
                    </li>
                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-photo-1"></i> Adm. Cursos</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Ver Cursos',  	courses_admin_list_path %></li>
                        <li><%= link_to 'Crear',  	new_course_path%></li>
                      </ul>
                    </li>
                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-users-1"></i> Usuarios</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Ver Usuarios',  	user_list_path %></li>
                        <li><%= link_to 'Agregar',  	admin_new_user_path%></li>
                        <li><%= link_to 'Carga Masiva',  	import_users_path%></li>
                      </ul>
                    </li>
                    <li>
                      <%= link_to communication_path do %>
                          <i class="icon-chat"></i> Comunicación
                      <% end %>
                    </li>
                <% elsif  current_user.teacher? %>
                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-puzzle-1"></i> Adm. Coaching</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Ver Coachings',  	coaching_admin_path %></li>
                        <li><%= link_to 'Crear',  	new_coaching_path%></li>
                      </ul>
                    </li>

                    <li class="normal_drop_down">
                      <a href="#"><i class="icon-photo-1"></i> Adm. Cursos</a>
                      <div class="mobnav-subarrow"></div>
                      <ul>
                        <li><%= link_to 'Ver Cursos',  	courses_admin_list_path %></li>
                        <li><%= link_to 'Crear',  	new_course_path%></li>
                      </ul>
                    </li>
                    <li>
                      <%= link_to communication_path do %>
                          <i class="icon-chat"></i> Comunicaci&oacute;n
                      <% end %>
                    </li>
                <% end %>
                <li>
                    <%= link_to edit_user_registration_path do %>
                        <i class="icon-torso"></i> Perfil
                    <% end %>
                </li>

              </ul>


            </div>
          </div><!-- End row -->
        </div><!-- End container -->
    </nav>
  <% end %>
  <%= yield %>
  <% if user_signed_in? %>
    <footer id="footer2">
    </footer>
  <% else %>
    <footer >
    <hr>
    <div class="container" id="nav-footer">
      <div class="row text-left">
        <div class="col-md-4 col-sm-4">
          <h4>COLABORAL</h4>
          <ul>
            <li><a href="http://colaboral.com/">Personas</a></li>
            <li><a href="http://colaboral.com/empresas">Empresas</a></li>
            <li><a href="http://colaboral.com/privacy">Políticas de privacidad</a></li>
          </ul>
        </div><!-- End col-md-4 -->

        <div class="col-md-4 col-sm-4">
          <h4>OTROS SERVICIOS</h4>
          <ul>
            <li><a href="http://colaboral.com/servicios/plan-de-empleabilidad">Para personas</a></li>
            <li><a href="http://colaboral.com/servicios/reclutamiento-y-seleccion">Para empresas</a></li>
          </ul>
        </div><!-- End col-md-4 -->
        <div class="col-md-4 col-sm-4">
          <ul>
            <li><strong class="phone">tel:+56223347386</strong><br></li>
            <li>Los Leones 220 of. 501, Providencia, Santiago
          </ul>
        </div><!-- End col-md-4 -->
      </div><!-- End row -->
    </div>
    <div id="copy_right">Colaboral© 2017</div>
  </footer>
  <% end %>

  <%= javascript_include_tag 'application'  %>
  <div id="toTop"><i class="icon-up-big"></i>
  </div>

  </body>

</html>
