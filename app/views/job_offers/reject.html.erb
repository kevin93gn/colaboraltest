<% if notice %>
  <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<%end%>
<div class="row">
  <div class="row" align="center"><h2><i class="icon-buffer"></i>Rechazar Oferta Laboral</h2></div>
  <div class="col-md-6 col-md-offset-3">
    <div class="box_style_1">
      <h4 align="center"><i class="icon-suitcase"></i><%= @job_offer.name %></h4>
      <ul class="list_1">
        <li style="border-bottom: 1px solid #eaeff3;">
          <h5>
            <label><i class="icon-mail"></i> Fuente: </label>
            <%= @job_offer.source %>
          </h5>
        </li>
        <li style="border-bottom: 1px solid #eaeff3;">
          <h5>
            <label><i class="icon-building"></i> Descripcion: </label>
            <%= @job_offer.description %>
          </h5>
        </li>
        <li style="border-bottom: 1px solid #eaeff3;">
          <h5>
            <label><i class="icon-buffer"></i> Razon de Rechazo: </label>
            <%= @job_offer.reject_reason %>
          </h5>
        </li>
      </ul>
    </div>
    <div class="row">
      <%= simple_form_for(@job_offer,:url => rejected_job_offer_path,  html: { method: :post,  autocomplete: 'off' }) do |f| %>
        <%= f.error_notification %>
          <div class="form-group">
            <label>Razón de Rechazo</label>
            <%= f.input :reject_reason, required: true, :input_html => { :class => 'required form-control', :id => 'reject_reason'}, :label => false, :placeholder => 'Razon de Rechazo' %>
          </div>
        <div id="bottom-wizard">
            <div><%= f.button :submit, "Rechazar", :class => 'btn btn-danger icon-times', data: {confirm: "¿Está seguro de rechazar esta oferta?"} %></div>
          </div><!-- end bottom-wizard -->
      <% end %>
    </div>
  </div>
</div>